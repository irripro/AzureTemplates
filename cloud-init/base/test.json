{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "userScript": {
            "type": "string",
            "metadata": {
                "description": "Type in the bash script to run via cloud-init"
            },
            "defaultValue": "[concat(
                                   '#cloud-config\n',
                                   'runcmd:\n',
                                   ' - echo "Hello World!" > /tmp/hello.world\n'
                            )
        ]"
    }
},
"variables": {},
"resources": [],
"outputs": {
    "genericOutput": {
        "type": "string",
        "value": "[parameters('userScript')]"
    }
}
}